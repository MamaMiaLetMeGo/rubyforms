<div class="grid grid-cols-12 gap-4">
  <!-- Main content area -->
  <div class="col-span-8">
    <div id="<%= dom_id blog %>">
      <p class="my-5">
        <strong class="block font-medium mb-1">Title:</strong>
        <%= blog.title %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Body:</strong>
        <% if blog.body.present? %>
          <%= blog.body.html_safe %>
        <% else %>
          <!-- Handle case where body is nil or empty -->
          No content available.
        <% end %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Author:</strong>
        <%= blog.author %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Slug:</strong>
        <%= blog.slug %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Published at:</strong>
        <%= blog.published_at %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Category:</strong>
        <%= blog.category %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Featured image:</strong>
        <%= blog.featured_image %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Status:</strong>
        <%= blog.status %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Views:</strong>
        <%= blog.views %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Likes:</strong>
        <%= blog.likes %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Comments count:</strong>
        <%= blog.comments_count %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Meta title:</strong>
        <%= blog.meta_title %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Meta description:</strong>
        <%= blog.meta_description %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Meta keywords:</strong>
        <%= blog.meta_keywords %>
      </p>
    </div>
  </div>

  <!-- Sidebar area -->
  <div class="col-span-4">
    <div class="bg-gray-100 p-4 rounded-lg">
      <h2 class="text-lg font-semibold mb-4">Table of Contents</h2>
      <!-- Add your table of contents here -->
      <!-- Example: -->
      <ul class="list-disc pl-4">
        <li><a href="#section1">Section 1</a></li>
        <li><a href="#section2">Section 2</a></li>
        <!-- Add more sections as needed -->
      </ul>
    </div>
  </div>
</div>
