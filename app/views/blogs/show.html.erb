<div class="mx-auto max-w-screen-xl px-4 md:px-0 w-full"> <!-- Adjust the max-width as needed -->
  <% if notice.present? %>
    <div class="bg-green-100 text-green-700 py-2 px-4 mb-5 rounded-lg">
      <%= notice %>
    </div>
  <% end %>

  <div class="p-6 mb-6"> <!-- Remove bg-white and shadow-md classes -->
    <%= render @blog %>
  </div>

  <% if @form.present? %>
    <h2>Related Form</h2>
    <%= render partial: 'documents/document', locals: { document: @document } %>
  <% end %>

  <div class="flex items-center">
    <%= link_to "Edit", edit_blog_path(@blog.slug), class: "btn btn-gray mr-2" %>
    <%= form_with(url: blog_path(@blog.slug), method: :delete, local: true, class: "inline") do |form| %>
      <%= form.submit "Delete", class: "text-red-500 hover:underline cursor-pointer", data: { turbo_confirm: "Are you sure you want to delete this blog?" } %>
    <% end %>      
    <%= link_to "Back to Blogs", blogs_path, class: "btn btn-blue ml-auto" %>
  </div>
</div>
